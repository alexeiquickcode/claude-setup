{
    "description": "Claude Code configuration with coding standards enforcement",
    "permissions": {
        "allow": [
            "WebFetch(domain:docs.anthropic.com)",
            "WebFetch(domain:github.com)",
            "WebFetch(domain:terraform.io)",
            "WebFetch(domain:registry.terraform.io)",
            "WebSearch(allowed_domains:terraform.io)",
            "WebSearch(allowed_domains:registry.terraform.io)",
            "mcp__context7__resolve-library-id",
            "mcp__context7__get-library-docs",
            "mcp__sequential-thinking__sequentialthinking",
            "Bash(grep:*)",
            "Bash(rg:*)",
            "Bash(find:*)",
            "Bash(ls:*)",
            "Bash(cat:*)",
            "Bash(python:*)",
            "Bash(aws logs describe-:*)",
            "Bash(aws logs get-:*)",
            "Bash(aws logs filter-:*)",
            "Bash(aws logs tail:*)",
            "Bash(aws ec2 describe-instances:*)",
            "Bash(aws ec2 describe-instance-status:*)",
            "Bash(aws ecs describe-:*)",
            "Bash(aws ecs list-:*)",
            "Bash(aws cloudwatch get-:*)",
            "Bash(aws cloudwatch describe-:*)",
            "Bash(aws lambda list-:*)",
            "Bash(aws lambda get-function:*)",
            "Bash(aws lambda get-function-configuration:*)",
            "Bash(aws codebuild batch-get-:*)",
            "Bash(aws codebuild list-:*)",
            "Bash(aws sagemaker describe-:*)",
            "Bash(aws sagemaker list-:*)",
            "Bash(aws sagemaker get-:*)",
            "Bash(aws mwaa get-environment:*)",
            "Bash(aws mwaa list-environments:*)",
            "Bash(aws elbv2 describe-:*)",
            "Bash(aws elbv2 get-:*)",
            "Bash(tree:*)"
        ],
        "deny": [
            "Bash(git push:*)",
            "Bash(git pull:*)",
            "Bash(terraform apply:*)"
        ]
    },
    "enableAllProjectMcpServers": true,
    "enabledMcpjsonServers": [
        "context7",
        "sequential-thinking"
    ],
    "hooks": {
        "UserPromptSubmit": [
            {
                "hooks": []
            }
        ]
    },
    "environment": {
        "ENFORCE_STYLE_RULES": "true"
    },
    "promptCaching": true,
    "model": "claude-opus-4-5",
    "includeCoAuthoredBy": false
}
